<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ICEWALL CTF Platform</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>

    <style>
        a{text-decoration: none;}
    </style>

    <script>
        function toggle_checkbox(id){
            const checkbox = document.getElementById(id);
            checkbox.checked = !checkbox.checked;
        }
    </script>
</head>
<body style="background-color: #c6c6c6; ">
    <!-- common headers -->
    <%- include("./common/header.ejs") %>

    <!-- partial body -->
    <form action="/admin/upload/contest" method="post">
    <div class="d-flex justify-content-center align-items-center" style="margin-top: 10vh; min-height:50vh;">
            <div class="me-5 w-50">
                <table class="table table-hover text-center w-100 mt-4">
                    <colgroup>
                        <col style="width: 10%;">
                        <col style="width: 20%;">
                        <col style="width: 40%;">
                        <col style="width: 30%;">
                    </colgroup>
        
                    <tbody>
                    <thead class="table-primary">
                        <td><b>#</b></td>
                        <td><b>분야</b></td>
                        <td><b>이름</b></td>
                        <td><b>난이도</b></td>
                    </thead>
        
                    <% problems.forEach((problem, idx) => { %>
                        <tr onclick="toggle_checkbox('<%= problem._id %>')">
                            <td><input type="checkbox" name="selection" value="<%= problem._id %>" autocomplete="off" id="<%= problem._id %>"></td>
                            <td><%= problem.domain %></td>
                            <td><%= problem.name %></td>
                            <td><%= problem.difficult %></td>
                        </tr>
                    <% }); %>
                    </tbody>
                </table>
            </div>

            <div style="width: fit-content;" class="ms-5">
                <div class="input-group mb-5">
                    <span class="input-group-text" id="basic-addon1">Contest Name</span>
                    <input type="text" class="form-control" aria-describedby="basic-addon1" name="name" required>
                </div>

                <div class="form-floating mt-3 mb-3">
                    <textarea class="form-control" id="floatingTextarea" placeholder="Input problem description here"
                    name="description" style="min-height: 20vh;" required></textarea>
                    <label for="floatingTextarea">Contest Description</label>
                </div>

                <div class="mt-3 mb-3 d-flex justify-content-end align-items-center">
                    <button type="submit" class="btn btn-secondary">Make Contest</button>
                </div>
            </div>
    </div>
    </form>
    
</body>
</html>